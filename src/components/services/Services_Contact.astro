<section>
    <div class="container">
        <h2>Ready to Book a Cleaning Service?</h2>
        <p>
            Contact The Squeegees today for a free, no-obligation quote. Whether
            you need window cleaning, gutter cleaning, or pressure washing, we
            have you covered.
        </p>
        <form name="contact" data-netlify="true" method="POST">
            <div class="input-section">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" />
            </div>
            <div class="input-section">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" />
            </div>
            <div class="input-section">
                <label for="phone">Phone</label>
                <input type="tel" name="phone" id="phone" />
            </div>
            <div class="input-section">
                <label for="message">Message</label>
                <textarea cols="2" rows="10" name="message" id="message"
                ></textarea>
            </div>
            <button>Submit Message</button>
        </form>
    </div>
</section>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 4rem;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .input-section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    input,
    textarea {
        font-family: "paragraph";
        font-size: 1rem;
        border: 0px;
        border-top: 1px solid var(--brand-blue);
        border-radius: 0px 0px 8px 8px;
        padding: 0.5rem 1rem;
        background-color: var(--light-blue);
    }
    button {
        width: fit-content;
        border-radius: 6rem;
        background-color: var(--turquoise);
        padding: 0.3rem 1rem;
        font-family: "paragraph";
        font-size: 1rem;
        border: 0px;
        color: var(--text-blue);
    }

    @media (min-width: 1024px) {
        .container {
            display: grid;
            grid-template-columns: 0.75fr 1fr;
            grid-template-areas:
                "title title"
                "p form";
        }
        .container h2 {
            grid-area: title;
        }
        .container p {
            grid-area: p;
        }
        form {
            grid-area: form;
        }
        button {
            cursor: pointer;
        }
    }
</style>
